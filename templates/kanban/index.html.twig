{% extends 'base.html.twig' %}

{% block title %}Kanban Dashboard{% endblock %}

{% block body %}
    <div class="flex flex-col items-center min-h-screen p-4 bg-gray-100 md:p-8">
        <h1 class="mb-8 text-2xl font-bold text-gray-800 md:text-3xl">Job Application Status</h1>

        <!-- Kanban Board -->
        <div class="flex flex-col w-full gap-4 overflow-x-auto md:flex-row">
            {# Apply Column #}
            <div class="flex flex-col w-full md:w-1/5 min-w-[250px] p-4 bg-white rounded-lg shadow-lg mb-4 md:mb-0">
                <h2 class="pb-2 mb-4 text-lg font-semibold text-gray-700 border-b-2">À postuler</h2>
                <div class="flex-1 space-y-4">
                    {% if kanban_data['A postuler'] is defined %}
                        {% for job in kanban_data['A postuler'] %}
                            <div class="p-3 transition-colors bg-blue-100 rounded-lg shadow hover:bg-blue-200">
                                <h3 class="text-sm font-semibold truncate">{{ job.title }}</h3>
                                <p class="text-xs text-gray-600 truncate">{{ job.company }}</p>
                                <div class="flex items-center justify-between mt-2">
                                    <a href="{{ path('app_job_offer_show', { id: job.id }) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs text-blue-600 transition-colors hover:text-blue-800">
                                       Voir détails
                                       <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                       </svg>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <p class="py-4 text-xs text-center text-gray-500">Aucune offre dans cette catégorie.</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            {# On Hold Column #}
            <div class="flex flex-col w-full md:w-1/5 min-w-[250px] p-4 bg-white rounded-lg shadow-lg mb-4 md:mb-0">
                <h2 class="pb-2 mb-4 text-lg font-semibold text-gray-700 border-b-2">En attente</h2>
                <div class="flex-1 space-y-4">
                    {% if kanban_data['En attente'] is defined %}
                        {% for job in kanban_data['En attente'] %}
                            <div class="p-3 transition-colors bg-yellow-100 rounded-lg shadow hover:bg-yellow-200">
                                <h3 class="text-sm font-semibold truncate">{{ job.title }}</h3>
                                <p class="text-xs text-gray-600 truncate">{{ job.company }}</p>
                                <div class="flex items-center justify-between mt-2">
                                    <a href="{{ path('app_job_offer_show', { id: job.id }) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs text-yellow-600 transition-colors hover:text-yellow-800">
                                       Voir détails
                                       <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                       </svg>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <p class="py-4 text-xs text-center text-gray-500">Aucune offre dans cette catégorie.</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            {# Interview Column #}
            <div class="flex flex-col w-full md:w-1/5 min-w-[250px] p-4 bg-white rounded-lg shadow-lg mb-4 md:mb-0">
                <h2 class="pb-2 mb-4 text-lg font-semibold text-gray-700 border-b-2">Entretien</h2>
                <div class="flex-1 space-y-4">
                    {% if kanban_data['Entretien'] is defined %}
                        {% for job in kanban_data['Entretien'] %}
                            <div class="p-3 transition-colors bg-orange-100 rounded-lg shadow hover:bg-orange-200">
                                <h3 class="text-sm font-semibold truncate">{{ job.title }}</h3>
                                <p class="text-xs text-gray-600 truncate">{{ job.company }}</p>
                                <div class="flex items-center justify-between mt-2">
                                    <a href="{{ path('app_job_offer_show', { id: job.id }) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs text-orange-600 transition-colors hover:text-orange-800">
                                       Voir détails
                                       <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                       </svg>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <p class="py-4 text-xs text-center text-gray-500">Aucune offre dans cette catégorie.</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            {# Accepted Column #}
            <div class="flex flex-col w-full md:w-1/5 min-w-[250px] p-4 bg-white rounded-lg shadow-lg mb-4 md:mb-0">
                <h2 class="pb-2 mb-4 text-lg font-semibold text-gray-700 border-b-2">Accepté</h2>
                <div class="flex-1 space-y-4">
                    {% if kanban_data['Accepté'] is defined %}
                        {% for job in kanban_data['Accepté'] %}
                            <div class="p-3 transition-colors bg-green-100 rounded-lg shadow hover:bg-green-200">
                                <h3 class="text-sm font-semibold truncate">{{ job.title }}</h3>
                                <p class="text-xs text-gray-600 truncate">{{ job.company }}</p>
                                <div class="flex items-center justify-between mt-2">
                                    <a href="{{ path('app_job_offer_show', { id: job.id }) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs text-green-600 transition-colors hover:text-green-800">
                                       Voir détails
                                       <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                       </svg>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <p class="py-4 text-xs text-center text-gray-500">Aucune offre dans cette catégorie.</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            {# Rejected Column #}
            <div class="flex flex-col w-full md:w-1/5 min-w-[250px] p-4 bg-white rounded-lg shadow-lg mb-4 md:mb-0">
                <h2 class="pb-2 mb-4 text-lg font-semibold text-gray-700 border-b-2">Refusé</h2>
                <div class="flex-1 space-y-4">
                    {% if kanban_data['Refusé'] is defined %}
                        {% for job in kanban_data['Refusé'] %}
                            <div class="p-3 transition-colors bg-red-100 rounded-lg shadow hover:bg-red-200">
                                <h3 class="text-sm font-semibold truncate">{{ job.title }}</h3>
                                <p class="text-xs text-gray-600 truncate">{{ job.company }}</p>
                                <div class="flex items-center justify-between mt-2">
                                    <a href="{{ path('app_job_offer_show', { id: job.id }) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs text-red-600 transition-colors hover:text-red-800">
                                       Voir détails
                                       <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                       </svg>
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <p class="py-4 text-xs text-center text-gray-500">Aucune offre dans cette catégorie.</p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}