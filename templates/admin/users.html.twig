{# templates/admin/users.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Users Management{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Users Management</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300">
            <thead>
                <tr class="bg-gray-100">
                    <th class="px-6 py-3 border-b">ID</th>
                    <th class="px-6 py-3 border-b">Email</th>
                    <th class="px-6 py-3 border-b">First Name</th>
                    <th class="px-6 py-3 border-b">Last Name</th>
                    <th class="px-6 py-3 border-b">Roles</th>
                    <th class="px-6 py-3 border-b">Created At</th>
                    <th class="px-6 py-3 border-b">Updated At</th>
                    <th class="px-6 py-3 border-b">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 border-b">{{ user.id }}</td>
                        <td class="px-6 py-4 border-b">{{ user.email }}</td>
                        <td class="px-6 py-4 border-b">{{ user.firstName }}</td>
                        <td class="px-6 py-4 border-b">{{ user.lastName }}</td>
                        <td class="px-6 py-4 border-b">
                            {% for role in user.roles %}
                                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs">
                                    {{ role }}
                                </span>
                            {% endfor %}
                        </td>
                        <td class="px-6 py-4 border-b">{{ user.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td class="px-6 py-4 border-b">{{ user.updatedAt|date('Y-m-d H:i:s') }}</td>
                        <td class="px-6 py-4 border-b">
                            <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" 
                                  onsubmit="return confirm('Are you sure you want to delete this user?');" 
                                  class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="px-6 py-4 text-center">No users found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}