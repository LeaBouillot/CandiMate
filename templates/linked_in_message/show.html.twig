{% extends 'base.html.twig' %}

{% block title %}Message LinkedIn - {{ linkedin_message.jobOffer.title }}{% endblock %}

{% block body %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_job_offer_list') }}">Offres d'emploi</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_job_offer_show', {'id': linkedin_message.jobOffer.id}) }}">
                    {{ linkedin_message.jobOffer.title }}
                </a>
            </li>
            <li class="breadcrumb-item active">Message LinkedIn</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0 h3">Message LinkedIn</h1>
                <small class="text-muted">
                    Créé le {{ linkedin_message.createdAt|date('d/m/Y H:i') }}
                </small>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5 class="mb-3 card-title">Informations de l'offre</h5>
                <dl class="mb-0 row">
                    <dt class="col-sm-3">Poste</dt>
                    <dd class="col-sm-9">{{ linkedin_message.jobOffer.title }}</dd>

                    <dt class="col-sm-3">Entreprise</dt>
                    <dd class="col-sm-9">{{ linkedin_message.jobOffer.company }}</dd>

                    {% if linkedin_message.jobOffer.contactPerson %}
                        <dt class="col-sm-3">Contact</dt>
                        <dd class="col-sm-9">{{ linkedin_message.jobOffer.contactPerson }}</dd>
                    {% endif %}
                </dl>
            </div>

            <div class="mb-4">
                <h5 class="mb-3 card-title">Contenu du message</h5>
                <div class="p-3 rounded bg-light">
                    {{ linkedin_message.content|nl2br }}
                </div>
            </div>

            <div class="gap-2 d-flex">
                <button class="btn btn-primary" onclick="copyMessage()">
                    <i class="bi bi-clipboard me-2"></i>Copier le message
                </button>
                <a href="{{ path('app_job_offer_show', {'id': linkedin_message.jobOffer.id}) }}" 
                   class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à l'offre
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function copyMessage() {
    const messageContent = `{{ linkedin_message.content|raw|escape('js') }}`;
    navigator.clipboard.writeText(messageContent).then(() => {
        // Vous pouvez ajouter une notification de succès ici
        alert('Message copié dans le presse-papiers !');
    });
}
</script>
{% endblock %}