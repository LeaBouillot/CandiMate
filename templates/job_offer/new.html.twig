{# templates/job_offer/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Job Application{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="mb-6 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-800">New Job Application</h1>
                    <a href="{{ path('app_job_offer_index') }}" class="text-gray-600 hover:text-gray-800">
                        <i class="fas fa-arrow-left mr-2"></i>Back to list
                    </a>
                </div>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="grid grid-cols-1 gap-6">
                        {# Job Information #}
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Job Information</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.title, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                <div>
                                    {{ form_label(form.company, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.company, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.company, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                <div>
                                    {{ form_label(form.location, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.location, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.location, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                <div>
                                    {{ form_label(form.salary, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.salary, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.salary, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>
                            </div>
                        </div>

                        {# Contact Information #}
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Contact Information</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_label(form.contactPerson, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.contactPerson, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.contactPerson, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                <div>
                                    {{ form_label(form.contactEmail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.contactEmail, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.contactEmail, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                <div class="md:col-span-2">
                                    {{ form_label(form.link, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.link, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.link, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>
                            </div>
                        </div>

                        {# Application Details #}
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Application Details</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_label(form.applicationDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.applicationDate, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.applicationDate, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                <div>
                                    {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.status, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.status, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-end space-x-4 pt-6">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            <i class="fas fa-save mr-2"></i>Save
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}