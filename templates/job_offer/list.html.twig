{# templates/job_offer/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}My Job Applications{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">My Job Applications</h1>
            <a href="{{ path('app_job_offer_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                <i class="fas fa-plus mr-2"></i>Add New Application
            </a>
        </div>

        {% if job_offers is empty %}
            <div class="bg-gray-100 rounded-lg p-6 text-center">
                <p class="text-gray-600">No job applications yet. Start by adding your first application!</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for job_offer in job_offers %}
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2">{{ job_offer.title }}</h2>
                        <p class="text-gray-600 mb-2">{{ job_offer.company }}</p>
                        <p class="text-sm text-gray-500 mb-2">
                            <i class="fas fa-map-marker-alt mr-2"></i>{{ job_offer.location }}
                        </p>
                        {% if job_offer.salary %}
                            <p class="text-sm text-gray-500 mb-2">
                                <i class="fas fa-money-bill-wave mr-2"></i>{{ job_offer.salary }}
                            </p>
                        {% endif %}
                        <div class="flex items-center mb-4">
                            <span class="px-3 py-1 text-sm rounded-full
                                {% if job_offer.status.value == 'A postuler' %}bg-yellow-100 text-yellow-800
                                {% elseif job_offer.status.value == 'En attente' %}bg-blue-100 text-blue-800
                                {% elseif job_offer.status.value == 'Entretien' %}bg-purple-100 text-purple-800
                                {% elseif job_offer.status.value == 'RefusÃ©' %}bg-red-100 text-red-800
                                {% else %}bg-green-100 text-green-800{% endif %}">
                                {{ job_offer.status.value }}
                            </span>
                        </div>
                        <div class="flex justify-between items-center mt-4">
                            <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}" 
                               class="text-blue-500 hover:text-blue-700">
                                <i class="fas fa-eye mr-1"></i>View Details
                            </a>
                            <div class="flex space-x-2">
                                <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}" 
                                   class="text-gray-500 hover:text-gray-700">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_job_offer_delete', {'id': job_offer.id}) }}"
                                      onsubmit="return confirm('Are you sure you want to delete this job application?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job_offer.id) }}">
                                    <button type="submit" class="text-red-500 hover:text-red-700">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
