{# templates/job_offer/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Job Application{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="mb-6 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-800">Edit Job Application</h1>
                    <div class="space-x-4">
                        <a href="{{ path('app_job_offer_index') }}" class="text-gray-600 hover:text-gray-800">
                            <i class="fas fa-arrow-left mr-2"></i>Back to list
                        </a>
                        <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}" class="text-blue-500 hover:text-blue-700">
                            <i class="fas fa-eye mr-2"></i>View
                        </a>
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    {# Same form structure as new.html.twig #}
                    <div class="grid grid-cols-1 gap-6">
                        {# Job Information #}
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Job Information</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                                    {{ form_errors(form.title, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                </div>

                                {# Other fields similar to new.html.twig... #}
                            </div>
                        </div>

                        {# Contact Information #}
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Contact Information</h2>
                            {# Contact fields similar to new.html.twig... #}
                        </div>

                        {# Application Details #}
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h2 class="text-lg font-semibold text-gray-700 mb-4">Application Details</h2>
                            {# Application fields similar to new.html.twig... #}
                        </div>
                    </div>

                    <div class="flex justify-between pt-6">
                        <form method="post" action="{{ path('app_job_offer_delete', {'id': job_offer.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this job application?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job_offer.id) }}">
                            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                                <i class="fas fa-trash mr-2"></i>Delete
                            </button>
                        </form>
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            <i class="fas fa-save mr-2"></i>Save Changes
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}