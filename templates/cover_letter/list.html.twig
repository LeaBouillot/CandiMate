{% extends 'base.html.twig' %}

{% block title %}Lettres de motivation - {{ jobOffer.title }}{% endblock %}

{% block body %}
    {# En-tête #}
    <div class="bg-white shadow">
        <div class="container px-6 py-4 mx-auto">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-semibold text-gray-800">Lettres de motivation</h1>
                    <p class="mt-1 text-gray-600">{{ jobOffer.title }} - {{ jobOffer.company }}</p>
                </div>
                <a href="{{ path('app_cover_letter_generate', {'id': jobOffer.id}) }}" 
                   class="flex items-center px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700">
                    <i class="mr-2 fas fa-plus"></i> Nouvelle lettre
                </a>
            </div>
        </div>
    </div>

    <div class="container px-6 py-8 mx-auto">
        {# Messages Flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 mb-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% else %}bg-red-100 text-red-700{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Liste des lettres #}
        {% if coverLetters|length > 0 %}
            <div class="grid gap-6 md:grid-cols-2">
                {% for coverLetter in coverLetters %}
                    <div class="overflow-hidden bg-white rounded-lg shadow-md">
                        <div class="p-6">
                            {# Aperçu du contenu #}
                            <div class="mb-4">
                                <div class="prose max-w-none">
                                    {{ coverLetter.content|raw|slice(0, 200) }}...
                                </div>
                            </div>

                            {# Métadonnées #}
                            <div class="flex items-center justify-between pt-4 mt-4 border-t">
                                <div class="text-sm text-gray-500">
                                    <div>Créée le {{ coverLetter.createdAt|date('d/m/Y') }}</div>
                                    <div>Modifiée le {{ coverLetter.updatedAt|date('d/m/Y') }}</div>
                                </div>
                                
                                {# Actions #}
                                <div class="flex space-x-2">
                                    <a href="{{ path('app_cover_letter_show', {'id': coverLetter.id}) }}" 
                                       class="px-3 py-1 text-sm text-white bg-blue-600 rounded hover:bg-blue-700">
                                        <span class="flex items-center">
                                            <i class="mr-1 fas fa-eye"></i>
                                            <span>Voir</span>
                                        </span>
                                    </a>
                                    
                                    <form action="{{ path('app_cover_letter_delete', {'id': coverLetter.id}) }}" 
                                          method="post" 
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette lettre ?');" 
                                          class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                                        <button type="submit" 
                                                class="px-3 py-1 text-sm text-white bg-red-600 rounded hover:bg-red-700">
                                            <span class="flex items-center">
                                                <i class="mr-1 fas fa-trash"></i>
                                                <span>Supprimer</span>
                                            </span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="p-6 text-center bg-white rounded-lg">
                <p class="text-gray-500">Aucune lettre de motivation n'a encore été créée pour cette offre.</p>
                <a href="{{ path('app_cover_letter_generate', {'id': jobOffer.id}) }}" 
                   class="inline-block px-4 py-2 mt-4 text-white bg-blue-600 rounded hover:bg-blue-700">
                    <i class="mr-2 fas fa-plus"></i> Générer une lettre
                </a>
            </div>
        {% endif %}

        {# Navigation #}
        <div class="mt-6">
            <a href="{{ path('app_job_offer_show', {'id': jobOffer.id}) }}" 
               class="inline-flex items-center px-4 py-2 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">
                <i class="mr-2 fas fa-arrow-left"></i>
                Retour à l'offre
            </a>
        </div>
    </div>
{% endblock %}