{% extends 'base.html.twig' %}

{% block title %}Lettre de motivation - {{ cover_letter.jobOffer.title }}{% endblock %}

{% block body %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_job_offer_list') }}">Offres d'emploi</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_job_offer_show', {'id': cover_letter.jobOffer.id}) }}">
                    {{ cover_letter.jobOffer.title }}
                </a>
            </li>
            <li class="breadcrumb-item active">Lettre de motivation</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0 h3">Lettre de motivation</h1>
                <div>
                    <small class="text-muted">
                        Générée le {{ cover_letter.createdAt|date('d/m/Y H:i') }}
                    </small>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5 class="mb-3 card-title">Informations de l'offre</h5>
                <dl class="mb-0 row">
                    <dt class="col-sm-3">Poste</dt>
                    <dd class="col-sm-9">{{ cover_letter.jobOffer.title }}</dd>

                    <dt class="col-sm-3">Entreprise</dt>
                    <dd class="col-sm-9">{{ cover_letter.jobOffer.company }}</dd>

                    {% if cover_letter.jobOffer.location %}
                        <dt class="col-sm-3">Localisation</dt>
                        <dd class="col-sm-9">{{ cover_letter.jobOffer.location }}</dd>
                    {% endif %}
                </dl>
            </div>

            <div class="mb-4">
                <h5 class="mb-3 card-title">Contenu de la lettre</h5>
                <div class="p-4 rounded bg-light">
                    {{ cover_letter.content|raw }}
                </div>
            </div>

            <div class="gap-2 d-flex">
                <button class="btn btn-primary" onclick="copyLetter()">
                    <i class="bi bi-clipboard me-2"></i>Copier la lettre
                </button>
                <button class="btn btn-secondary" onclick="printLetter()">
                    <i class="bi bi-printer me-2"></i>Imprimer
                </button>
                <a href="{{ path('app_job_offer_show', {'id': cover_letter.jobOffer.id}) }}" 
                   class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à l'offre
                </a>
            </div>
        </div>
    </div>
</div>

{# Template d'impression #}
<div id="printTemplate" style="display: none;">
    <div style="max-width: 800px; margin: 20px auto; font-family: Arial, sans-serif;">
        <div style="margin-bottom: 30px;">
            <h2 style="margin-bottom: 5px;">{{ cover_letter.jobOffer.title }}</h2>
            <p style="color: #666;">{{ cover_letter.jobOffer.company }}</p>
            {% if cover_letter.jobOffer.location %}
                <p style="color: #666;">{{ cover_letter.jobOffer.location }}</p>
            {% endif %}
        </div>
        <div>
            {{ cover_letter.content|raw }}
        </div>
        <div style="margin-top: 30px; font-size: 12px; color: #666;">
            Généré le {{ cover_letter.createdAt|date('d/m/Y') }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function copyLetter() {
    const content = document.querySelector('.bg-light').innerText;
    navigator.clipboard.writeText(content)
        .then(() => {
            // Afficher une notification plus élégante dans le style macOS
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 10px 20px;
                border-radius: 20px;
                font-family: -apple-system, BlinkMacSystemFont, sans-serif;
                z-index: 9999;
                animation: fadeInOut 2s ease-in-out;
            `;
            notification.textContent = 'Copié dans le presse-papiers';
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 2000);
        })
        .catch(err => {
            // Gestion des erreurs de permission sur macOS
            if (err.name === 'NotAllowedError') {
                alert('Veuillez autoriser l\'accès au presse-papiers dans les préférences de votre navigateur.');
            }
        });
}

function printLetter() {
    // Sauvegarder les styles actuels
    const originalContent = document.body.innerHTML;
    const printContent = document.getElementById('printTemplate').innerHTML;

    // Appliquer le contenu d'impression
    document.body.innerHTML = printContent;

    // Configurer la page pour l'impression
    const style = document.createElement('style');
    style.textContent = `
        @media print {
            @page {
                margin: 2cm;
                size: A4;
            }
            body {
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
                line-height: 1.6;
                color: #000;
            }
            /* Styles spécifiques pour Mac */
            @supports (-webkit-hyphens: none) {
                body {
                    font-family: -apple-system, BlinkMacSystemFont, sans-serif;
                }
            }
        }
    `;
    document.head.appendChild(style);

    // Imprimer
    window.print();

    // Restaurer le contenu original
    document.body.innerHTML = originalContent;
</script>
{% endblock %}